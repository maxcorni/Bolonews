{% extends 'base.html.twig' %}

{% block title %}Home{% endblock %}

{% block body %}
    <div class="container">
        <h1>A la une !</h1>
        {% if article_une is empty %}
            <p>No a la une article found.</p>
        {% else %}
            {% include 'article/_une_card.html.twig' %}
        {% endif %}
        <h2>Dernieres parutions</h2>
        <div class="article-list">
            {% if articles is empty %}
                <p>No articles found.</p>
            {% endif %}
            {% for article in articles %}
                    {% include 'article/_small_card.html.twig' %}
            {% endfor %}
        </div>
    </div>
{% endblock %}
